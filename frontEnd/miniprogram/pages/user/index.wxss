Page{
    background: #f3f3f3;
}

.header{
  width: 100%;
  height: 400rpx;
  background: white;
  border-bottom: 25rpx solid #f3f3f3;
}

.avatar{
  position: absolute;
  left: 0; right: 0;
  width: 128rpx;
  height: 128rpx;
  margin: 72rpx auto;
  border-radius: 50%;
}
.nickname{
  position: absolute;
  top: 10rpx;
  left: 0rpx;right: 0rpx;
  width: 100%;
  margin:220rpx auto;
  color: rgb(25,25,25);
  text-align: center;
  font-size: 30rpx;
}

.content{
  background: white;
  padding: 25rpx 0 25rpx 30rpx;
  color:#252525;
  font-size: 14px; 
  border-bottom: 1px solid #f3f3f3;
}


.sm-img{
  width: 12px;
  height: 14px;
  margin-right: 60rpx;
